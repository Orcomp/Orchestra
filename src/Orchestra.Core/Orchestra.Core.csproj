<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>net46;net47;netcoreapp3.0;netcoreapp3.1</TargetFrameworks>
    <AssemblyName>Orchestra.Core</AssemblyName>
    <RootNamespace>Orchestra</RootNamespace>
    <DefaultLanguage>en-US</DefaultLanguage>
    <PackageId>Orchestra.Core</PackageId>
    <PackageVersion>1.0.0-alpha0001</PackageVersion>
    <Description>Orchestra core library.</Description>
    <PackageTags>orc;orchestra;wpf;xaml</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <UseWpf>true</UseWpf>
    <UseWindowsForms>true</UseWindowsForms>
    <ExtrasEnableImplicitWpfReferences>true</ExtrasEnableImplicitWpfReferences>
    <ExtrasEnableImplicitWinFormsReferences>true</ExtrasEnableImplicitWinFormsReferences>
  </PropertyGroup>

  <PropertyGroup>
    <!-- SonarQube requires a project guid -->
    <ProjectGuid>C7049E9C-D258-4E3F-8DE3-17D8C50145CA</ProjectGuid>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Catel.Analyzers" Version="1.0.0" PrivateAssets="all" />
    <PackageReference Include="Catel.Fody" Version="4.3.0" PrivateAssets="all" />
    <PackageReference Include="Catel.MVVM" Version="5.12.5" />
    <PackageReference Include="ControlzEx" Version="4.3.0-alpha0106" />
    <PackageReference Include="DotNetZip" Version="1.13.7" />
    <PackageReference Include="Fody" Version="6.1.1" PrivateAssets="all">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="LoadAssembliesOnStartup.Fody" Version="4.4.0" PrivateAssets="all" />
    <PackageReference Include="MethodTimer.Fody" Version="3.1.2" PrivateAssets="all" />
    <PackageReference Include="ModuleInit.Fody" Version="2.1.0" PrivateAssets="all" />
    <PackageReference Include="Obsolete.Fody" Version="5.2.1" PrivateAssets="all" />
    <PackageReference Include="Orc.Controls" Version="4.0.0-alpha0024" />
    <PackageReference Include="Orc.FileSystem" Version="3.2.0" />
    <PackageReference Include="Orc.SystemInfo" Version="3.2.0" />
    <PackageReference Include="WindowsAPICodePack-Core" Version="1.1.2" PrivateAssets="all" />
    <PackageReference Include="WindowsAPICodePack-Shell" Version="1.1.1" PrivateAssets="all" />
    <PackageReference Include="WpfAnalyzers" Version="2.4.5" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="NETStandard.Library" Version="2.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Resources\ThirdPartyNotices\" />
  </ItemGroup>

  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props')" />
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props')" />
</Project>