<catel:DataWindow x:Class="Orchestra.Views.SplashScreen"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:catel="http://catel.codeplex.com"
                  WindowStartupLocation="CenterScreen" WindowStyle="None" Topmost="true">
    
    <Grid>
        <Image x:Name="splashScreenImage" HorizontalAlignment="Stretch" Height="357" Width="574" VerticalAlignment="Stretch" Margin="0" />
        <ProgressBar Value="{Binding Percentage}" Height="27" HorizontalAlignment="Left" Margin="12,318,0,0" VerticalAlignment="Top" Width="550" />
        <Label Content="{Binding TaskName}" Height="27" HorizontalAlignment="Left" Margin="24,318,0,0" VerticalAlignment="Top" Width="538" VerticalContentAlignment="Center" />
    </Grid>
    
</catel:DataWindow>
